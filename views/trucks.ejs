<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Dynamic page title from EJS -->
  <title>Fleet Operations Tracker | <%= title %></title>

  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <!--  CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<!-- Header Section -->
<header>
  <!-- Logo and site title -->
  <div class="logo">
    <img src="/img/logo.jpg" alt="Team Logo">
    <h1>Fleet Operations Tracker</h1>
  </div>

  <!-- Navigation Bar  -->
  <nav>

    <% if (!User) { %>
        <!-- Shown when user is NOT logged in -->

        <a href="/login" class="auth-link">
          <i class="fas fa-sign-in-alt"></i> Login
        </a>

        <a href="/auth/google" class="hero-btn google-btn">
          <i class="fab fa-google"></i> Sign in with Google
        </a>

        <a href="/signup" class="auth-link">
          <i class="fas fa-user-plus"></i> Register
        </a>

    <% } else { %>
        <!-- Shown when user IS logged in -->

        <span class="user-name">
          <i class="fas fa-user-circle"></i> Welcome, <%= User.fullName %>
        </span>

        <!-- Home link -->
        <a href="/" class="<%= activePage === 'home' ? 'active' : '' %>">
          <i class="fas fa-home"></i> Home
        </a>

        <!-- Create trip link -->
        <a href="/create" class="<%= activePage === 'create' ? 'active' : '' %>">
          <i class="fas fa-plus-circle"></i> Log New Trip
        </a>

        <!-- View trips link -->
        <a href="/trucks" class="<%= activePage === 'trucks' ? 'active' : '' %>">
          <i class="fas fa-truck"></i> View Active Trips
        </a>

        <!-- Logout link -->
        <a href="/logout" class="auth-link logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>

    <% } %>

  </nav>
</header>

  
<!--  Main Page Content -->
<main class="page-content">
  <div class="table-container">

    <!-- Display success or error messages -->
    <% if (message) { %>
      <div class="message-box success-box"><%= message %></div>
    <% } else if (error) { %>
      <div class="message-box error-box"><%= error %></div>
    <% } %>
      
    <!-- Page heading and description -->
    <h2>Tracked Trucks / Trips</h2>
    <p>Below is a list of all tracked trucks currently stored in the system.</p>

    <!--  Truck Table  -->
    <table class="truck-table">

      <!-- Table headings -->
      <thead>
        <tr>
          <th>Trip / Route Name</th>
          <th>Truck / Unit ID</th>
          <th>Driver</th>
          <th>Scheduled Departure</th>
          <th>Estimated Arrival</th>
          <th>Status</th>
          <th>Cargo Type</th>
          <th>Weight (kg)</th>
          <th>Actions</th>
        </tr>
      </thead>

      <!-- Table body -->
      <tbody>

        <!-- Show message if there are no trips -->
        <% if (!trips || trips.length === 0) { %>
          <tr>
            <td colspan="9" class="no-data-cell">
              No trucks found. <a href="/create" class="table-link">Log a new trip</a>.
            </td>
          </tr>

        <% } else { %>

          <!-- Loop through each truck trip -->
          <% trips.forEach(function(truck) { %>
            <tr>

              <!-- Trip name -->
              <td><%= truck.tripName %></td>

              <!-- Truck ID -->
              <td><%= truck.truckId %></td>

              <!-- Driver name (checks if user exists) -->
              <td>
                <% if (truck.user && truck.user.fullName) { %>
                  <%= truck.user.fullName %>
                <% } else { %>
                  <%= truck.driverName %> 
                <% } %>
              </td>

              <!-- Scheduled departure date -->
              <td>
                <% if (truck.scheduledDeparture) { %>
                  <%= truck.scheduledDeparture.toISOString().substring(0, 10) %>
                <% } else { %>
                  -
                <% } %>
              </td>

              <!-- Estimated arrival date -->
              <td>
                <% if (truck.estimatedArrival) { %>
                  <%= truck.estimatedArrival.toISOString().substring(0, 10) %>
                <% } else { %>
                  -
                <% } %>
              </td>

              <!-- Status badge -->
              <td>
                <span class="status-badge status-<%= (truck.status || 'Scheduled').replace(/\s+/g, '-') %>">
                  <%= truck.status || 'Scheduled' %>
                </span>
              </td>

              <!-- Cargo type -->
              <td><%= truck.cargoType %></td>

              <!-- Cargo weight -->
              <td><%= truck.weightKg %></td>

              <!-- Edit link -->
              <td>
                <a href="/edit-trip/<%= truck._id %>" class="table-link">View / Edit</a>
              </td>

            </tr>
          <% }); %>

        <% } %>

      </tbody>
    </table>
  </div>
</main>

<!--  Footer  -->
<footer>
  <p>&copy; 2025 Fleet Operations Tracker Project. INFR3120.</p>
</footer>

</body>
</html>
