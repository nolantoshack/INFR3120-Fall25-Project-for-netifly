<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8" />

<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Fleet Operations Tracker | Set New Password</title>

 
  <link rel="stylesheet" href="/css/form_style.css" />
</head>
<body>

<!--  Header Section  -->
<header>
  <!-- Logo and site title -->
  <div class="logo">
    <img src="/img/logo.jpg" alt="Team Logo">
    <h1>Fleet Operations Tracker</h1>
  </div>

  <!-- Navigation Bar  -->
  <nav>

    <% if (!User) { %>
        <!-- Shown when user is NOT logged in -->

        <a href="/login" class="auth-link">
          <i class="fas fa-sign-in-alt"></i> Login
        </a>

        <a href="/auth/google" class="hero-btn google-btn">
          <i class="fab fa-google"></i> Sign in with Google
        </a>

        <a href="/signup" class="auth-link">
          <i class="fas fa-user-plus"></i> Register
        </a>

    <% } else { %>
        <!-- Shown when user IS logged in -->

        <span class="user-name">
          <i class="fas fa-user-circle"></i> Welcome, <%= User.fullName %>
        </span>

        <!-- Home page link -->
        <a href="/" class="<%= activePage === 'home' ? 'active' : '' %>">
          <i class="fas fa-home"></i> Home
        </a>

        <!-- Create trip page link -->
        <a href="/create" class="<%= activePage === 'create' ? 'active' : '' %>">
          <i class="fas fa-plus-circle"></i> Log New Trip
        </a>

        <!-- View trips page link -->
        <a href="/trucks" class="<%= activePage === 'trucks' ? 'active' : '' %>">
          <i class="fas fa-truck"></i> View Active Trips
        </a>

        <!-- Logout link -->
        <a href="/logout" class="auth-link logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>

    <% } %>

  </nav>
</header>

<!--  Main Page Content -->
<main class="page-content">

  <!-- Password reset form container -->
  <div class="form-container sign-up-form">

    <!-- Page heading -->
    <h2>Create a New Password</h2>

    <!-- Page instructions -->
    <p>Please enter your new password below.</p>

    <!-- Display error message if it exists -->
    <% if (error) { %>
      <div class="message-box error-box"><%= error %></div>
    <% } %>

    <!-- Password reset form -->
    <form action="/reset-password" method="POST">

      <!-- Hidden field to pass the user ID -->
      <input type="hidden" name="userId" value="<%= userId %>" />

      <!-- New password input -->
      <div class="form-group">
        <label>New Password <span class="required-star">*</span></label>
        <input type="password" name="newPassword" placeholder="Must be at least 6 characters long" required />
      </div>

      <!-- Confirm new password input -->
      <div class="form-group">
        <label>Confirm New Password <span class="required-star">*</span></label>
        <input type="password" name="confirmPassword" placeholder="Re-enter the same password" required />
      </div>

      <!-- Submit button -->
      <div class="form-group" style="text-align: right; padding-top: 15px;">
        <button type="submit" class="submit-btn primary">Update Password</button>
      </div>

      <!-- Link back to login -->
      <p class="form-footer">
        <a href="/login">Back to Login</a>
      </p>

    </form>
  </div>
</main>

<!-- Footer Section -->
<footer>
  <p>&copy; 2025 Fleet Operations Tracker Project. INFR3120.</p>
</footer>

</body>
</html>
